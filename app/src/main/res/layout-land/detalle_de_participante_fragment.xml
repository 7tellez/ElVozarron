<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    tools:context="com.uniquindio.android.electiva.elvozarron.fragments.DetalleDeParticipanteFragment">

    <!-- TODO: Update blank fragment layout -->

    <!-- Falta la imagen-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="@string/tituloParticipante"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/marco_portada"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombreDetalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="15dp"
                android:text="Stiven Alejandr rengifo ospina"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edadDetale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="15dp"
                android:text="20 aÃ±os"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">

                <ImageView
                    android:id="@+id/imageEntrenadorParticipante"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/marco_portada"
                    android:src="@drawable/rihana"
                    android:layout_weight="0.76" />

                <TextView
                    android:id="@+id/nombreEntrenadorParticipante"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1.47"
                    android:text="Adele"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/vinotinto"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtRelacionUniversidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="25dp"
                android:gravity="center_horizontal"
                android:text="prueba"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtEstadoParticipante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:text="prueba"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAbrirUrl"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/marco_portada"
                android:elevation="30dp"
                android:text="@string/btnVideo"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold"></Button>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
